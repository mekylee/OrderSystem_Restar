<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <RelativeLayout
        android:id="@+id/manage_order_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white" >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="订单管理"
            android:textColor="@color/black"
            android:textSize="18sp" />

       <Button
           android:id="@+id/order_back_btn"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignBaseline="@+id/txt_topbar"
           android:layout_alignBottom="@+id/txt_topbar"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="15dp"
           android:background="@drawable/left_arrow" />
       
     

    </RelativeLayout>
    
        <LinearLayout
        android:id="@+id/order_top_bar"
        android:layout_below="@id/manage_order_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal" >
         
     <TextView
         android:id="@+id/wait_for_confirmed"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="19dp"
         android:gravity="center"
         android:text="待确认"
         android:textColor="@color/black"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/wait_for_dishes"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="32dp"
         android:layout_toRightOf="@+id/wait_for_confirmed"
         android:gravity="center"
         android:text="待上菜"
         android:textColor="@color/black"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/completed_tv"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="17dp"
         android:gravity="center"
         android:text="已完成"
         android:textColor="@color/black"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/wait_for_bill"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_alignParentTop="true"
         android:layout_marginRight="28dp"
         android:layout_toLeftOf="@+id/completed_tv"
         android:gravity="center"
         android:text="待结账"
         android:textColor="@color/black"
         android:textSize="15sp" />

    </LinearLayout>
    <View  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#000000" />

    <ImageView
        android:id="@+id/tab_line"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/order_top_bar"
        android:layout_marginLeft="20dp"
        android:contentDescription="tab"
        android:src="@drawable/bar" />
     <android.support.v4.view.ViewPager  
        android:id="@+id/order_pager"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"  
        android:layout_weight="1" >  
     </android.support.v4.view.ViewPager>  
</LinearLayout>
