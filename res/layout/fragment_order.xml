<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <RelativeLayout
         android:id="@+id/relativelayout1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="10dp"
        
         >
          <TextView
              android:id="@+id/ordernumber_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="15dp"
              android:gravity="left"
              android:text="订单号" />
         

          <TextView
              android:id="@+id/ordertime_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/ordernumber_tv"
              android:layout_alignBottom="@+id/ordernumber_tv"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:text="下单时间" />

        
          <TextView
              android:id="@+id/operation_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/ordertime_tv"
              android:layout_alignBottom="@+id/ordertime_tv"
              android:layout_alignParentRight="true"
              android:layout_marginRight="24dp"
              android:gravity="right"
              android:text="操作" />

         
      </RelativeLayout>
         <ListView
             android:id="@+id/order_listview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/relativelayout1" >

         </ListView>

</RelativeLayout>
